{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes déjà connecté à
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Deconnectez-vous</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1><br>
		<label for="inputEmail">Email</label><br>
		<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control champ" required autofocus>
		<br>
		<label for="inputPassword">Password</label><br>
		<input type="password" name="password" id="inputPassword" class="form-control champ" required>
		<br>

		<input
		type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
										        See https://symfony.com/doc/current/security/remember_me.html
				
						<div class="checkbox mb-3">
							<label>
								<input type="checkbox" name="_remember_me">
								Remember me
							</label>
						</div> #}

		<button type="submit">
			Connectez-vous
		</button>
	</form>
	<a href="{{path('inscription')}}"><br><br>
		<button>
			Si vous n'avez pas de compte inscrivez vous ici
		</button>
	</a>
{% endblock %}
